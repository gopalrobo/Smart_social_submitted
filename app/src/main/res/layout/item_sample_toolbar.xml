<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/get_started_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="3dp">

            <ImageView
                android:id="@+id/studentImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:src="@drawable/profilemember" />

            <TextView
                android:id="@+id/Item_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studentImg"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="fgdhdghghgh"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/tick_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ticked_image"
                android:src="@drawable/ic_check_white_24dp"
                android:visibility="invisible" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>